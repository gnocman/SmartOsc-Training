<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="SmartOSC\CustomerRegistration\Model\Logger\VirtualDebug" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/custom-logger-info.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="SmartOSC\CustomerRegistration\Model\Logger\VirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">customer_register</argument>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object"> SmartOSC\CustomerRegistration\Model\Logger\VirtualDebug</item>
            </argument>
        </arguments>
    </virtualType>
</config>
